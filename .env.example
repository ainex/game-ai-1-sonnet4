# Sims 4 AI Gaming Assistant Environment Variables
# Copy this file to .env and fill in the actual values

# Development settings
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# API Keys (use mocks in development)
OPENAI_API_KEY=mock_key_for_testing
CLAUDE_API_KEY=mock_key_for_testing

# Database settings
DATABASE_URL=sqlite:///./sims4_assistant.db

# Server settings
HOST=localhost
PORT=8000

# Audio settings
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=1
AUDIO_DEVICE_INDEX=-1

# Screenshot settings
SCREENSHOT_QUALITY=85
MAX_IMAGE_SIZE=1920x1080

# Game settings
SIMS4_INSTALL_PATH=/path/to/sims4
SCREENSHOTS_DIR=./screenshots
RECORDINGS_DIR=./recordings
